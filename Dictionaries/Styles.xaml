<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:system="clr-namespace:System;assembly=mscorlib">
    <Style x:Key="MenuEntry" TargetType="Button">
        <Setter Property="Button.FontSize" Value="16"/>
        <Setter Property="Button.Height" Value="52"/>
        <Setter Property="Button.BorderThickness" Value="0"/>
        <Setter Property="Button.HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Button.Width" Value="255"/>
    </Style>
    <Style x:Key="Article" TargetType="Run">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Foreground" Value="#FF0035A6"/>
    </Style>
    <Style x:Key="TextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="15"/>
    </Style>
    <system:Double x:Key="MenuWidth">255</system:Double>
</ResourceDictionary>
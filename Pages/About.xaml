<Page x:Class="CryptoMan.Pages.About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptoMan.Pages"
      xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="About">

    <Grid fw:PointerTracker.Enabled="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="52"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle Grid.ColumnSpan="4" Grid.RowSpan="5" Fill="{fw:AcrylicBrush grid}" Margin="0"/>
        <Rectangle Grid.ColumnSpan="4" Grid.RowSpan="5" Fill="#afff" Margin="0"/>
        <TextBlock Margin="60 0 0 0" Grid.Row="0" Style="{StaticResource TextBlock}">
            <Run Style="{StaticResource Article}">О программе</Run>
        </TextBlock>
        <TextBlock Grid.Row="1" Style="{StaticResource TextBlock}">
            <Run>Автор: Воронин Роман Витальевич</Run>
            <LineBreak/>
            <Run>Студент группы ИС(ПРО)-11</Run>
            <LineBreak/>
            <Run>2021</Run>
        </TextBlock>
    </Grid>
</Page>
